# ========================================
# Configuração do Sistema de Agentes IA
# ========================================

# OpenAI Configuration
# Obtenha sua API Key em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Evolution API Configuration
# URL da sua instância Evolution API
EVOLUTION_API_URL=http://localhost:8080
# API Key da Evolution API
EVOLUTION_API_KEY=your-evolution-api-key-here

# Database Configuration
# URL de conexão com o banco PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# ========================================
# Configurações Opcionais
# ========================================

# OpenAI Model Configuration
# Modelo padrão para os agentes
OPENAI_DEFAULT_MODEL=gpt-4o
# Máximo de tokens por resposta
OPENAI_MAX_TOKENS=1000
# Temperatura para geração (0.0 = determinístico, 1.0 = criativo)
OPENAI_TEMPERATURE=0.7

# Evolution API Configuration
# Instância padrão do WhatsApp
EVOLUTION_DEFAULT_INSTANCE=default
# Timeout para requisições (em ms)
EVOLUTION_TIMEOUT=30000

# Feature Flags
# Habilitar base de conhecimento
ENABLE_KNOWLEDGE_BASE=true
# Habilitar geração de áudio
ENABLE_VOICE_GENERATION=false
# Habilitar reconhecimento de fala
ENABLE_SPEECH_TO_TEXT=false
# Habilitar gestão de memória
ENABLE_MEMORY_MANAGEMENT=true

# Limites do Sistema
# Máximo de agentes por organização
MAX_AGENTS_PER_ORG=10
# Máximo de chunks de conhecimento por agente
MAX_KNOWLEDGE_CHUNKS=1000
# Máximo de itens de memória por conversa
MAX_MEMORY_ITEMS=100
# Máximo de tokens por resposta
MAX_TOKENS_PER_RESPONSE=2000

# ========================================
# Configurações de Desenvolvimento
# ========================================

# Ambiente de execução
NODE_ENV=development

# Logging
LOG_LEVEL=debug
ENABLE_OPENAI_LOGGING=true
ENABLE_EVOLUTION_LOGGING=true

# Rate Limiting
# Máximo de requisições por minuto para OpenAI
OPENAI_RATE_LIMIT=60
# Máximo de requisições por minuto para Evolution API
EVOLUTION_RATE_LIMIT=100

# ========================================
# Configurações de Segurança
# ========================================

# CORS
# Origens permitidas para CORS
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# JWT Secret (para autenticação)
JWT_SECRET=your-jwt-secret-here

# ========================================
# Configurações de Monitoramento
# ========================================

# Sentry (opcional)
SENTRY_DSN=your-sentry-dsn-here

# Analytics (opcional)
ANALYTICS_KEY=your-analytics-key-here

# ========================================
# Configurações de Webhook
# ========================================

# Webhook Secret para Evolution API
WEBHOOK_SECRET=your-webhook-secret-here

# URL do webhook (deve ser acessível publicamente)
WEBHOOK_URL=https://yourdomain.com/api/webhooks/evolution